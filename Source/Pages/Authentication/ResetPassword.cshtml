@page
@model RestaurantManagement.Pages.Authentication.ResetPasswordModel
@{
}
@{
    Layout = "_MyLayout";
}

<body class="container">
    <div class="login-form">
        <h2 class="menutext">Reset password</h2>
        <form method="post">
            <div class="form-group">
                <label for="NewPassword">New Password:</label>
                <input type="password" class="form-control" id="Username" name="NewPassword" />
            </div>
            <div class="form-group"> 
                <label for="ConfirmPassword">Confirm Password:</label>
                <input type="password" class="form-control" id="Password" name="ConfirmPassword" />
                <h3 style="color:red">@Model.message</h3>
            </div>
            <button type="submit" class="btn">Reset password</button>
        </form>
    </div>
    <div class="row contact">
        <div class="col-md-12 textfeedback d-flex justify-content-center text-danger">
            <h2>CONTACT</h2>
        </div>
        <div class="col-md-6 contacttext">
            <p>FPT University Hoa Lac Campus, Thach That, Ha Noi</p>
            <p>Email: info@restaurant.com</p>
            <p>Phone: +1-123-456-7890</p>
            <p>&copy; 2023 Restaurant Management</p>
        </div>
        <div class="col-md-6 contactimg">
            <div>
                <a href="https://www.facebook.com"><img src="~/css/fb.png" alt="Logo"></a>
                <a href="https://mail.google.com/mail/u/0/#inbox"><img src="~/css/google.png" alt="Logo"></a>
                <a href="https://mail.google.com/mail/u/0/#inbox"><img src="~/css/twitter.png" alt="Logo"></a>
            </div>
        </div>
    </div>
</body>
<link href="~/css/authentication/loginandregister.css" rel="stylesheet" />