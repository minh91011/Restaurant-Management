@page
@model RestaurantManagement.Pages.Authentication.ResetPasswordOTPModel
@{
}
@{
    Layout = "_MyLayout";
}



<head>

    <style>
        body {
            background-color: #D4D4D4;
        }

        .login-form {
            width: 500px;
            margin: 15vh auto;
            padding: 60px;
            background-color: white;
            border: 1px solid #CCC;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }

            .login-form input {
                width: 100%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #CCC;
                border-radius: 3px;
            }

            .login-form button {
                width: 100%;
                background-color: #444;
                color: white;
                padding: 10px;
                margin-top: 10px;
                border: none;
                border-radius: 3px;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="login-form">
        <h1>Reset password</h1>
        <form method="post">
            <div class="form-group">
                <label for="Email">Enter your email to reset password:</label>
                <input type="text" class="form-control"  name="email" />
            </div> 
            <h3 style="color:red">@Model.message</h3>
            <button type="submit" class="btn btn-primary">Next</button>
        </form>
    </div>
</body>