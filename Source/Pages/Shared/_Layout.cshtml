
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantManagement.styles.css" asp-append-version="true" />

</head>
<body>
    <header class="header">
        <div class="imgHeader">
            <img src="~/css/background.jpg" alt="Logo" class="logo-image">
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container headerWeb">           
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ulheader">
                        <li class="nav-item">
                            <div class="btnheader">
                                <a class="nav-link btndetails" asp-area="" asp-page="/foodmanager/Index">Food Manager</a>
                            </div>                           
                        </li>
                        <li class="nav-item">
                            <div class="btnheader">
                                <a class="nav-link btndetails" asp-area="" asp-page="/Combo/Index">Combo Manager</a>
                            </div>                           
                        </li>
                        <li class="nav-item">
                            <div class="btnheader">
                                <a class="nav-link btndetails" asp-area="" asp-page="/category/Index">Category Manager</a>
                            </div>                           
                        </li>
                        <li class="nav-item">
                            <div class="btnheader">
                                <a class="nav-link btndetails" asp-area="" asp-page="/tableorder/ListTableOrder">Table Manager</a>
                            </div>                           
                        </li>
                        <li class="nav-item">
                            <div class="btnheader">
                                <a class="nav-link btnlogoutdetails" asp-area="" asp-page="/authentication/logout">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>           
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - RestaurantManagement - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<link href="~/css/_Layout.css" rel="stylesheet" />