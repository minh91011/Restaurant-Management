@page
@model RestaurantManagement.Pages.Combo.DetailsModel

@{
	ViewData["Title"] = "Details";
}


<div>
	<div class="menu">
		<div>
			<h2 class="menutext">COMBO DETAIL</h2>
		</div>
	</div>
	<table class="table">
		<thead class="theadtable">
			<tr>
				<th class="title">Name</th>
				<th class="title">Description</th>
				<th class="title">Price</th>
				<th class="title">Settings</th>
			</tr>
		</thead>
		<tr class="tbodyfood">

			<td>@Html.DisplayFor(model => model.Combo.Name)</td>

			<td>@Html.DisplayFor(model => model.Combo.Description)</td>

			<td>@Html.DisplayFor(model => model.Combo.Price)</td>

			<td class="btncrud">
				<a asp-page="./Edit" asp-route-id="@Model.Combo?.Id">Edit</a>
				<a asp-page="./Index">Back to List</a>
				<a id="showFoodTable" href="javascript:void(0)">Show list Foods</a>
			</td>
		</tr>
	</table>
	<div class="menu">
	</div>
	<table class="table" id="foodTable" style="display: none;">
		<thead class="theadtable">
			<tr>
				<th class="title">Name</th>
				<th class="title">Description</th>
				<th class="title">Price</th>
				<th class="title">Category</th>
			</tr>
		</thead>
		<tbody class="tbodyfood">
			@foreach (var item in Model.Food)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CategoryId)
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
<link href="~/css/foodandcategory/details.css" rel="stylesheet" />
<link href="~/css/fooddetails.css" rel="stylesheet" />
<link href="~/css/buttoncustom.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$(document).ready(function () {
		$("#showFoodTable").click(function () {
			$("#foodTable").toggle(); // Hiển thị/ẩn bảng bên dưới khi nhấp vào nút "List Food"
		});
	});
</script>

