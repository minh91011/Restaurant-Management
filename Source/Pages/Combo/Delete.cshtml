@page
@model RestaurantManagement.Pages.Combo.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="menu">
        <div>
            <h2 class="menutext">DELETE COMBO</h2>
        </div>
    </div>
    <div>
        <table class="table">
            <thead class="theadtable">
                <tr>
                    <th class="title">Name</th>
                    <th class="title">Description</th>
                    <th class="title">Price</th>
                    <th class="title">Settings</th>
                </tr>
            </thead>
            <tr class="tbodyfood">
                <td>@Html.DisplayFor(model => model.Combo.Name)</td>

